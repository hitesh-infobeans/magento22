<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
       <referenceContainer name="product.info.main">
            <block class="Infobeans\CallForPrice\Block\Product\View\CallForPrice" name="product.info.callforprice" as="callforprice" after="product.info.price" template="Infobeans_CallForPrice::catalog/product/view/callforprice.phtml"/>
        </referenceContainer>
        <referenceBlock name="customize.button">
        	<action method="setTemplate">
                <argument name="template" xsi:type="string">Infobeans_CallForPrice::catalog/product/type/bundle/view/customize.phtml</argument>
            </action>    
            
        </referenceBlock>
    </body>
</page>